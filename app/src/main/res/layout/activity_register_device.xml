<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    android:id="@+id/reglayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aub.oltranz.payfuel.RegisterDevice">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Register Your Device"
        android:id="@+id/tv"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/lblUserName"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/edit_text_shape"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username"
        android:hint="Enter a User e-mail" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/lblPassword"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/edit_text_shape"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:ems="10"
        android:id="@+id/pw"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Device Name"
        android:id="@+id/lbldevice"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/edit_text_shape"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Enter Device Name"
        android:id="@+id/devname"
        android:layout_marginTop="4dp" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Retype Device Name"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/edit_text_shape"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:hint="Retype Device Name"
        android:id="@+id/retypedevname"
        android:layout_marginTop="4dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER DEVICE"
        android:textColor="@color/positive"
        android:background="@drawable/button_shape_positive"
        android:id="@+id/devreg"
        android:layout_marginTop="20dp"
        android:onClick="register" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="LOGIN"
                android:textStyle="bold"
                android:id="@+id/loginLink"
                android:clickable="true"
                android:onClick="login"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/regLink"
                android:id="@+id/spAdminLink"
                android:text="SP ADMIN"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="spAdmin"/>

        </RelativeLayout>
    </TableRow>

</LinearLayout>
