<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="4dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Generate Reciept?"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textColor="@color/nearblack"
            android:background="@drawable/button_shape_negative"
            android:text="NO"
            android:id="@+id/no" />

        <Button
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:textColor="@color/positive"
            android:background="@drawable/button_shape_positive"
            android:text="YES"
            android:id="@+id/yes" />

    </TableRow>
</LinearLayout>